<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <View
                android:id="@+id/viewColor"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@color/alarm_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtLbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="6:00 AM"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewColor"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtMedLbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Alaxan"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewColor"
                app:layout_constraintTop_toBottomOf="@+id/txtLbl" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/txtM"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_circle_solid"
                    android:gravity="center"
                    android:text="M"
                    android:textColor="@color/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtT"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_circle_solid"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtW"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_circle_solid"
                    android:gravity="center"
                    android:text="W"
                    android:textColor="@color/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTh"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_circle_solid"
                    android:gravity="center"
                    android:text="T"
                    android:textColor="@color/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtF"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_circle_solid"
                    android:gravity="center"
                    android:text="F"
                    android:textColor="@color/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtS"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_circle_solid"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_circle_solid"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/text_black"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>